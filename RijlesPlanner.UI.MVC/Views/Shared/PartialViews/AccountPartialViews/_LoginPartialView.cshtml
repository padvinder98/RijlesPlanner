<ul class="navbar-nav">
    @{
        if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-action="Shedule" asp-controller="Dashboard">Agenda</a>
            </li>
            @if (User.IsInRole("Instructor"))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" asp-action="Students" asp-controller="Dashboard">Studenten</a>
                </li>
            }
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Hallo, @User.Identity.Name
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-action="Profile" asp-controller="Account">Profiel</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-action="LogOut" asp-controller="Account">Uiloggen</a>
                </div>
            </li>

        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-action="Login" asp-controller="Account">Inloggen</a>
            </li>
            <li>
                <a class="nav-link text-white" asp-action="Register" asp-controller="Account">Registreren</a>
            </li>
        }
    }
</ul>