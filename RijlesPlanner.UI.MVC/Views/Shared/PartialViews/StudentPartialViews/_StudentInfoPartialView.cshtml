@model RijlesPlanner.UI.MVC.ViewModels.DashboardViewModels.StudentInfoViewModel

    <!-- Modal -->
    <div class="modal fade" id="studentInfoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@Model.Student.FirstName @Model.Student.LastName</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            @Html.LabelFor(Model => Model.Student.EmailAddress): @Html.DisplayFor(Model => Model.Student.EmailAddress)
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col">
                            @Html.LabelFor(Model => Model.Student.City): @Html.DisplayFor(Model => Model.Student.City)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            @Html.LabelFor(Model => Model.Student.StreetName): @Html.DisplayFor(Model => Model.Student.StreetName)
                        </div>
                        <div class="col">
                            @Html.LabelFor(Model => Model.Student.HouseNumber): @Html.DisplayFor(Model => Model.Student.HouseNumber)
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Sluiten</button>
                </div>
            </div>
        </div>
    </div>