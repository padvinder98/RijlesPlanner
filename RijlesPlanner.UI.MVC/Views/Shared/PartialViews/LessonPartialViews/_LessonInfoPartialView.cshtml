@model RijlesPlanner.UI.MVC.ViewModels.LessonViewModels.LessonViewModel

<div id="lessonInfoModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Lesson information
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="lessonId" hidden>
                    @Model.Id
                </p>
                <div class="row">
                    <div class="col">
                        Title: @Html.DisplayFor(Model => Model.Title)
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        Description: @Html.DisplayFor(Model => Model.Description)
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        Start: @Html.DisplayFor(Model => Model.Start)
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        End: @Html.DisplayFor(Model => Model.End)
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @if (User.IsInRole("Instructor"))
                {
                    <button type="button" class="btn btn-danger" id="delete-lesson" data-dismiss="modal">Cancel lesson</button>
                }
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
