@model List<RijlesPlanner.ApplicationCore.Models.Lesson>

@{
    ViewData["Title"] = "Dashboard";
}


<div class="container">
    @if (User.IsInRole("Instructor"))
    {
        <h2>Instructor dashboard</h2>
    }
    else
    {
        <h2>Student dashboard</h2>
    }

    @if (Model.Count == 0)
    {
        <p>No lessons planned yet.</p>
    }
    else
    {
        <div class="table-responsive">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th hidden scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Start</th>
                        <th scope="col">End</th>
                        <th scope="col">Option</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lesson in Model.Where(l => l.StartDate.Date == DateTime.Today.Date))
                    {
                        <tr>
                            <td hidden>@lesson.Student.Id</td>
                            <td>@lesson.Student.FirstName @lesson.Student.LastName</td>
                            <td>@lesson.StartDate</td>
                            <td>@lesson.EndDate</td>
                            <td><input class="btn btn-primary btn-sm" value="Info" type="button" id="student-info" /></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }

    <div id="your-div-to-hold-partial-view"></div>

</div>

    @section Scripts{
        <script>$(document).on('click', '#student-info', function () {

                var currentRow = $(this).closest("tr");

                var id = currentRow.find("td:eq(0)").text();

                $.ajax({
                    type: "GET",
                    url: "/Student/GetStudentInfoPartialView",
                    data: { id: id },
                    datatype: "json",
                    cache: false,
                    error: function (e) { alert("nope" + e); },
                    success: function (partialViewData) {
                        $('#your-div-to-hold-partial-view').html(partialViewData);
                        $('#studentInfoModal').modal('show');
                    }
                });
            });</script>
    }
