@{
    ViewData["Title"] = "Dashboard";
}


<div class="container">
    @if (User.IsInRole("Instructor"))
    {
        <h2>Instructor dashboard</h2>
    }
    else
    {
        <h2>Student dashboard</h2>
    }
    <hr />
    @if (User.IsInRole("Instructor"))
    {
        await Html.RenderPartialAsync("PartialViews/DashboardPartialViews/_AddLessonPartialView");
    }
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            GetAllLessons();
        });

        $("#add-lesson-button").click(function () {
            CreateLesson();
        });

        $("#delete-lesson").click(function () {
            var r = confirm("Weet je zeker dat je deze les wilt verwijderen?");
            if (r == true) {
                txt = DeleteLesson();
            }
        });
    </script>
}
